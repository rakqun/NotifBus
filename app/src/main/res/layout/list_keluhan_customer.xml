<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/cvListKeluhan">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgEmailNew"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/email_new"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/imgEmailOpen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/email_open"
            android:layout_marginEnd="20dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvListNoTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TK-0225001"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvListNamaCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RISKI ASKIA KURNIAWAN"
            android:textColor="@color/black"
            android:layout_marginTop="-5dp"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvListNoTicket"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvListDari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medan"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-5dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvListNamaCustomer"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvListGaris"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-5dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tvListNamaCustomer"
            app:layout_constraintStart_toEndOf="@id/tvListDari"/>

        <TextView
            android:id="@+id/tvListTujuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RantauPrapat"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="-5dp"
            app:layout_constraintTop_toBottomOf="@id/tvListNamaCustomer"
            app:layout_constraintStart_toEndOf="@id/tvListGaris"/>

        <TextView
            android:id="@+id/tvListDateNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13-03-2025 16:03:23"
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>