<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tvTitleDialogAddCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Customer"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/imgCloseDialogAddCustomer"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/close_24"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/llNamaLengkapDialogAddCustomer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edit_transparant"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitleDialogAddCustomer">

            <EditText
                android:id="@+id/etNamaLengkapDialogAddCustomer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:hint="Nama Lengkap"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:textColorHint="@android:color/darker_gray"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTglLahirDialogAddCustomer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edit_transparant"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/llNamaLengkapDialogAddCustomer">

            <EditText
                android:id="@+id/etTglLahirDialogAddCustomer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:hint="Tanggal Lahir"
                android:textSize="14sp"
                android:focusableInTouchMode="false"
                android:textColor="@color/black"
                android:singleLine="true"
                android:textColorHint="@android:color/darker_gray"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llKelaminDialogAddCustomer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edit_transparant"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/llTglLahirDialogAddCustomer">

            <EditText
                android:id="@+id/etKelaminDialogAddCustomer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:hint="Kelamin"
                android:textSize="14sp"
                android:focusableInTouchMode="false"
                android:textColor="@color/black"
                android:singleLine="true"
                android:textColorHint="@android:color/darker_gray"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNoHpDialogAddCustomer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edit_transparant"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/llKelaminDialogAddCustomer">

            <EditText
                android:id="@+id/etNoHpDialogAddCustomer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:hint="Nomor Hp"
                android:textSize="14sp"
                android:inputType="number"
                android:textColor="@color/black"
                android:singleLine="true"
                android:textColorHint="@android:color/darker_gray"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEmailDialogAddCustomer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_edit_transparant"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/llNoHpDialogAddCustomer">

            <EditText
                android:id="@+id/etEmailDialogAddCustomer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:hint="Email"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:textColorHint="@android:color/darker_gray"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnAddDialogCustomer"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="TAMBAH"
            android:textColor="@color/white"
            android:background="@color/blue_them"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toBottomOf="@id/llEmailDialogAddCustomer"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>