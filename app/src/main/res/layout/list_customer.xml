<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"
    app:cardCornerRadius="10dp"
    android:id="@+id/layout_list_customer">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlImgCustomer"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/imgCustomerBoy"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/boy"/>

            <ImageView
                android:id="@+id/imgCustomerWomen"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/woman"
                android:visibility="gone"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llNamaLengkapCustomer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/rlImgCustomer"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvTextNamaLengkapTicket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Nama Lengkap"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:layout_weight="0.1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/tvNamaLengkapTicket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="RISKI ASKIA KURNIAWAN"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNoHpCustomer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/llNamaLengkapCustomer"
            app:layout_constraintStart_toEndOf="@id/rlImgCustomer"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvTextNoHpTicket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Nomor Hp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:layout_weight="0.1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/tvNoHpTicket"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="086662381912"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEmailCustomer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/llNoHpCustomer"
            app:layout_constraintStart_toEndOf="@id/rlImgCustomer"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvTextEmailCustomer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:layout_weight="0.1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/tvEmailCustomer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="riskiaskiak@gmail.com"
                android:textSize="12sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>